<%= form_with model: document do |form| %>
<div class="row">
	<div class="col-lg-4 mt-3">
		<div class="form-group">
			<%= form.label :name , class: 'mb-2' %>
			<%= form.text_field :name ,class: 'form-control form-control-lg' %>
			
			<% document.errors.full_messages_for(:name).each do |
				message| %>
 				<p class="text-danger"><%= message %> </p>
			<% end %>
		</div>
		<div class="form-group">
			<%= form.label :doc_type , class: 'mb-2 mt-4' %>
			<%= form.select :doc_type, options_for_select(Document::DOC_TYPES,selected: document.doc_type ),{ prompt:'select document type'},{class: 'form-select form-select-lg'} %>
			
			<% document.errors.full_messages_for(:doc_type).each do |
				message| %>
 				<p class="text-danger"><%= message %> </p>
			<% end %>
		</div>
		<div class="form-group">
			<%= form.label :employee_id , class: 'mb-2 mt-4' %>
			<%= form.select :employee_id, options_for_select(Employee.all.map{|employee| [employee.name,employee.id]},selected: document.employee_id ),{ prompt:'select Employee'},{class: 'form-select form-select-lg'} %>
			
			<% document.errors.full_messages_for(:employee_id).each do |
				message| %>
 				<p class="text-danger"><%= message %> </p>
			<% end %>
		</div>
	</div>

	</div>
	<div class="row">
		<div class="col-lg-12 mt-4">
			<%= form.submit class: 'btn btn-danger btn-lg' %>
			<%= link_to 'Back to Docments', documents_path , class: "btn btn-success btn-lg" %>
		</div>
	</div>
</div>
<% end %>