<div class="col-lg-12">
  <%= flash[:notice] %> 
<div class="card round-0  mt-5 mb-4">
  <div class="card-body">
<h3 class="text-center">Listing Employees Documents</h3>   
  </div>

</div>  
        
    <%= link_to 'Create    new Documents', new_document_path, class:"btn btn-primary btn-bg mb-4 mt-2" %> 

     <table class="table table-bordered table-striped text-center">   
       <thead>
         <tr>   
          <th>Name</th>   
          <th>Doc_type</th> 
          <th>Employee</th>  
        </tr>  
      </thead>
          
      </tbody>  
         <% @documents.each do |document| %>   
          <tr>   
            <td><%= document.name %></td>   
            <td><%= document.doc_type %></td> 
            <td><%= link_to document.employee.name,employee_path(document.employee.name) %></td>  
            <td>
              
              <%= link_to "Edit", edit_document_path(document), class: "btn btn-primary"%>
              <%= link_to "View",document_path(document), class: "btn btn-dark"%>
              <%= link_to "Delete",document_path(document), class: "btn btn-danger", method: :delete,data: { confirm: 'Are you sure for delete data?'} %>              
            </td>
           </tr> 
        <% end %>  
      </tbody>
    </table> 
</div>