<div class="col-lg-10">

	<div class="card round-0  mt-5 mb-4">
		<div class="card-body">
			<h2 class="text-center text-white bg-dark">EMPOLYEE DETAILS</h2>
			<div class="row mt-5">
				<div class="col-lg-6">
					<h3 class="mb-4 text-danger" >Personal Information</h3>
					<p class="lead "> <strong>First Name:</strong><%= @employee.first_name %></p>
					<p class="lead "> <strong>Middle Name:</strong><%= @employee.midle_name %></p>					
					<p class="lead"> <strong>Last Name:</strong><%= @employee.last_name %></p>
				</div>
				<div class="col-lg-6">
					<h3 class="mb-4 text-danger">Address Information</h3>
					<p class="lead"> <strong>Address_line_1:</strong><%= @employee.address_line_1 %></p>
					<p class="lead"> <strong>State:</strong><%= @employee.state %></p>
					<p class="lead"> <strong>Country:</strong><%= @employee.country %></p>
				</div>

				<% if @employee.documents.present? %>

					<div class="row mt-5">
						<h2 class="text-center">Employee Documents</h2>
						<% @employee.documents.each do |document| %>
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-lg-4">
										<p class="lead"><%= document.name %></p>
									</div>
									<div class="col-lg-4">
										<%= document.doc_type %>
										
									</div>
									
								</div>
							</div>
						</div>
						<%end%>
					</div>
					<%end%>


				<div class="col-lg-12 mt-3">
					<%= link_to 'Back to Employees', employees_path , class: "btn btn-success btn-lg" %>
				</div>
			</div>

		</div>
	</div>
</div>