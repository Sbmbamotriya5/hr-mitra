<div class="col-lg-10">

	<div class="card round-0  mt-5 mb-4">
		<div class="card-body">
			<h3 class="text-center">EDIT EMPOLYEES</h3>   
		</div>
	</div>
	<%= form_with model: @employee do |form| %>
	<div class="row">
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :First_name , class: 'mb-2' %>
				<%= form.text_field :first_name ,class: 'form-control form-control-lg' %>
				
				<% @employee.errors.full_messages_for(:first_name).each do |
					message| %>	

					<p class="text-danger"><%= message %> </p>
				<% end %>
			</div>
		</div>
		<div class="col-lg-4 mt-3"> 
			<div class="form-group">
				<%= form.label :Middle_name , class: 'mb-2' %>
				<%= form.text_field :midle_name ,class: 'form-control form-control-lg' %>
			</div> 
		</div>
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :Last_name , class: 'mb-2' %>
				<%= form.text_field :last_name ,class: 'form-control form-control-lg' %>
			</div>
		</div>
	</div>
		<div class="row">
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :Personal_email , class: 'mb-2' %>
				<%= form.email_field :personal_email ,class: 'form-control form-control-lg' %>
			</div>
		</div>
		<div class="col-lg-4 mt-3"> 
			<div class="form-group">
				<%= form.label :City , class: 'mb-2' %>
				<%= form.text_field :city ,class: 'form-control form-control-lg' %>
			</div> 
		</div>
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :State , class: 'mb-2' %>
				<%= form.text_field :state ,class: 'form-control form-control-lg' %>
			</div>
		</div>
		<div class="row">
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :country , class: 'mb-2' %>
				<%= form.text_field :country ,class: 'form-control form-control-lg' %>
			</div>
		</div>
		<div class="col-lg-4 mt-3"> 
			<div class="form-group">
				<%= form.label :pincode , class: 'mb-2' %>
				<%= form.text_field :pincode ,class: 'form-control form-control-lg' %>
			</div> 
		</div>
		<div class="col-lg-4 mt-3">
			<div class="form-group">
				<%= form.label :address_line_1 , class: 'mb-2' %>
				<%= form.text_field :address_line_1 ,class: 'form-control form-control-lg' %>
			</div>
		</div>
		<div class="col-lg-12 mt-3">
			<%= form.submit class: 'btn btn-danger btn-lg' %>
			<%= link_to 'Back to Employees', employees_path , class: "btn btn-success btn-lg" %>
		</div>
	</div>
		
	<% end %>
	
</div>